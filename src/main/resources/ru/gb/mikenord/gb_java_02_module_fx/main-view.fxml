<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.mikenord.gb_java_02_module_fx.Controller">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>

    <AnchorPane>
        <Label fx:id="userNameLabel" AnchorPane.leftAnchor="10" visible="false"/>
        <Label fx:id="msgCountLabel" AnchorPane.rightAnchor="10" visible="false"/>
    </AnchorPane>

    <TextArea fx:id="chatWindow" editable="false" VBox.vgrow="ALWAYS" focusTraversable="false"/>

    <HBox spacing="10.0">
        <TextField fx:id="chatMsgField" HBox.hgrow="ALWAYS"/>
        <Button text="Send" defaultButton="true" onAction="#clickSendButton"/>
    </HBox>

</VBox>
